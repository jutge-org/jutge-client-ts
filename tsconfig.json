{
    "compilerOptions": {
        "target": "es2015",
        "module": "es2015",
        "moduleResolution": "bundler",
        "declaration": true,
        "declarationMap": true,
        "moduleDetection": "force",
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true
    },
    "exclude": ["**/*.test.ts", "dist"]
}
